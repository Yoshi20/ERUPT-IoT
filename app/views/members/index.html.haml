%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Email
      %th Birthdate
      %th Mobile number
      %th Gender
      %th Canton
      %th Comment
      %th Wants newsletter emails
      %th Wants event emails
      %th Card
      %th Magma coins

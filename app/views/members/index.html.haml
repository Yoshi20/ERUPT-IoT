.row
  .col
    %h1.page__title= t('members.title')

.row
  .col
    %p= "Total members count = #{Member.all.count}"
  .col-6
  .col
    %p
      = "External link:"
      = link_to members_extern_path, members_extern_path, style: 'font-size: small;'

-# search form
.row
  .col
    .search-form.form-group
      = form_tag members_path, method: 'get', class: 'form-inline' do
        = search_field_tag :search, params[:search], class: 'form-control', placeholder: t('members.search')
        = button_tag type: 'submit', class: 'btn btn-default', name: nil do
          %span.material-icons= 'search'

.member-list
  %table.table.table-hover
    %thead.table-header
      %tr
        %th.text-center= link_to t('activerecord.attributes.member.card_id')+'?', members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'card_id', order: 'asc'), style: 'color: black;'
        %th.text-center= link_to t('activerecord.attributes.member.ggleap_uuid')+'?', members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'ggleap_uuid', order: 'asc'), style: 'color: black;'
        %th.text-center= link_to t('activerecord.attributes.member.is_hourly_worker')+'?', members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'is_hourly_worker', order: 'asc'), style: 'color: black;'
        %th= link_to t('activerecord.attributes.member.first_name'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'first_name', order: 'asc'), style: 'color: black;'
        %th= link_to t('activerecord.attributes.member.last_name'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'last_name', order: 'asc'), style: 'color: black;'
        %th= link_to t('activerecord.attributes.member.email'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'email', order: 'asc'), style: 'color: black;'
        -# %th= link_to t('activerecord.attributes.member.birthdate'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'birthdate', order: 'asc'), style: 'color: black;'
        -# %th= link_to t('activerecord.attributes.member.gender'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'gender', order: 'asc'), style: 'color: black;'
        -# %th= link_to t('activerecord.attributes.member.canton'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'canton', order: 'asc'), style: 'color: black;'
        %th= link_to t('activerecord.attributes.member.abo_types'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'abo_types', order: 'asc'), style: 'color: black;'
        -# %th= link_to t('activerecord.attributes.member.wants_newsletter_emails'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'wants_newsletter_emails', order: 'asc'), style: 'color: black;'
        -# %th= link_to t('activerecord.attributes.member.wants_event_emails'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'wants_event_emails', order: 'asc'), style: 'color: black;'
        %th.text-center= link_to t('activerecord.attributes.member.magma_coins')+'?', members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'magma_coins', order: 'asc'), style: 'color: black;'
        %th.text-center= link_to t('activerecord.attributes.member.number_of_scans')+'?', members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'number_of_scans', order: 'asc'), style: 'color: black;'
        %th= link_to t('activerecord.attributes.member.comment'), members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'comment', order: 'asc'), style: 'color: black;'
        %th.text-center= link_to t('activerecord.attributes.member.locked')+'?', members_path(search: params[:search], filter: params[:filter], 'filter-data': params['filter-data'], sort: 'locked', order: 'asc'), style: 'color: black;'

    %tbody.member-list-body.with-show
      - @members.each do |member|
        %tr{'data-id': member.id, 'data-component'=>'member', style: "background-color: #{member.new? ? 'aqua' : ''};"}
          %td.text-center
            - if member.card_id.present?
              .material-icons= 'done'
          %td.text-center
            - if member.ggleap_uuid.present?
              .material-icons= 'done'
          %td.text-center
            - if member.is_hourly_worker.present?
              .material-icons= 'done'
          %td= member.first_name
          %td= member.last_name
          %td= member.email
          -# %td= member.birthdate
          -# %td= member.mobile_number
          -# %td= member.gender
          -# %td= member.canton
          %td= member.abo_types.map(&:name).join(', ')
          -# %td= member.wants_newsletter_emails
          -# %td= member.wants_event_emails
          %td.text-center= member.magma_coins
          %td.text-center= member.scan_events.count
          %td= member.comment
          %td.text-center
            - if member.locked
              .material-icons= 'done'

          %td.admin-list-actions
            .admin-list-actions__link
              = link_to member_path(member), class:'btn btn-sstm btn-square' do
                %span.material-icons.admin-actions__link__icon= 'visibility'
            .admin-list-actions__link
              = link_to edit_member_path(member), class: 'btn btn-sstm btn-square' do
                %span.material-icons.admin-actions__link__icon= 'edit'
            .admin-list-actions__link
              = form_for member, method: :delete, role: 'form', class:'form' do |f|
                = button_tag(type: "submit", onclick: "return confirm('Are you sure?')", class:'btn btn-sstm btn-square') do
                  %span.material-icons.admin-actions__link__icon= 'delete'

  .member-list-footer
    = render 'paginator', members: @members

  -# .admin-actions{style: 'left: 0.5rem;'}
  -#   .admin-actions__link
  -#     = link_to members_path, class:'btn btn-ghost btn-square' do
  -#       %span.material-icons.admin-actions__link__icon= 'refresh'
  .admin-actions
    .admin-actions__link
      = button_to members_sync_with_ggleap_path, method: :post, class: 'btn btn-sstm', onclick: "document.getElementById('sync-ggleap-spinner').classList.remove('hidden');" do
        %span#sync-ggleap-spinner.spinner-border.spinner-border-sm.hidden{role:"status", "aria-hidden":"true"}
        %span Sync ggLeap
    .admin-actions__link
      = link_to members_path, class:'btn btn-ghost btn-square' do
        %span.material-icons.admin-actions__link__icon= 'refresh'
    .admin-actions__link
      = link_to new_member_path, class:'btn btn-ghost btn-square' do
        %span.material-icons.admin-actions__link__icon= 'add'

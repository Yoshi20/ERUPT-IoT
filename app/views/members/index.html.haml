  %tbody
    - @members.each do |member|
      %tr
        %td= member.first_name
        %td= member.last_name
        %td= member.email
        %td= member.birthdate
        %td= member.mobile_number
        %td= member.gender
        %td= member.canton
        %td= member.comment
        %td= member.wants_newsletter_emails
        %td= member.wants_event_emails
        %td= member.card_id
        %td= member.magma_coins
        %td= member.expiration_date
        %td= member.number_of_scans
        %td= link_to 'Show', member
        %td= link_to 'Edit', edit_member_path(member)

= render '/legal_health_scores/legal_health_scores_navigation'

%h1 Listing legal_health_params

%table
  %thead
    %tr
      %th Desciption
      %th Legal health topic
      %th
      %th
      %th

  %tbody
    - @legal_health_params.each do |legal_health_param|
      %tr
        %td= legal_health_param.description
        %td= legal_health_param.legal_health_topic_id
        -# %td= link_to 'Show', legal_health_param
        -# %td= link_to 'Edit', edit_legal_health_param_path(legal_health_param)
        -# %td= link_to 'Destroy', legal_health_param, method: :delete, data: { confirm: 'Are you sure?' }
        %td
          = link_to edit_legal_health_param_path(legal_health_param), class: 'btn btn-sstm btn-square' do
            %span.material-icons.admin-actions__link__icon= 'edit'
        %td
          = form_for legal_health_param, method: :delete, role: 'form', class:'form' do |f|
            = button_tag(type: "submit", onclick: "return confirm('Are you sure?')", class:'btn btn-sstm btn-square') do
              %span.material-icons.admin-actions__link__icon= 'delete'

%br

= link_to 'New Legal health param', new_legal_health_param_path
